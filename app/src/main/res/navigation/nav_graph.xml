<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/welcomeFragment">

    <fragment
        android:id="@+id/welcomeFragment"
        android:name="com.example.pokedex.ui.fragments.WelcomeFragment"
        android:label="fragment_welcome"
        tools:layout="@layout/fragment_welcome" >
        <action
            android:id="@+id/action_welcomeFragment_to_searchPokemonFragment"
            app:destination="@id/searchPokemonFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/searchPokemonFragment"
        android:name="com.example.pokedex.ui.fragments.SearchPokemonFragment"
        android:label="fragment_search_pokemon"
        tools:layout="@layout/fragment_search_pokemon" >
        <action
            android:id="@+id/action_searchPokemonFragment_to_pokemonPageFragment"
            app:destination="@id/pokemonPageFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/pokemonPageFragment"
        android:name="com.example.pokedex.ui.fragments.PokemonPageFragment"
        android:label="PokemonPageFragment" >
        <argument
            android:name="pokemonName"
            app:argType="string" />
    </fragment>
</navigation>